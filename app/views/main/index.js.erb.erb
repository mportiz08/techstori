clearTimeout(counter);
$('#right li').remove();

<% @tweets.each do |tweet| %>
  $('#right ul').prepend('<%= escape_javascript(display(tweet)) %>');
<% end %>
$('#right ul').hide();
$('#right ul').fadeIn();

scroll();

function scroll() {
  var target = $('#right li:first');
  target.slideUp(1000, function() {
    var old = "<li>" + target.html() + "</li>";
    target.remove();
    $('#right ul').append(old);
  });
  
  counter = setTimeout(scroll, 3000);
  running = 1;
}
