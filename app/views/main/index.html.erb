<% content_for :title do %>techstori<% end %>

<% content_for :head do %>
<script type="text/javascript">
  var counter;
  var running = 0;
  
  $(document).ready(function() {
    resizePanel();
    $(window).resize(resizePanel);
    
    $('#about').hide();
    $('#about-link').toggle(function() {
      $('#about').fadeIn();
    }, function() {
      $('#about').fadeOut();
    });
    
    // use ajax to reload page with tweets containing the keyword
    $('#left a').click(function() {
      $.post("<%= root_url %>", { keyword: $(this).text() }, null, "script");
    });
  });
  
  // hack to dynamically resize right panel
  function resizePanel() {
    $('#right').width( $(document).width() - $('#left').width() - 25 );
  }
</script>
<% end %>
